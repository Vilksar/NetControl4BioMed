@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="flex-grow-1 d-flex flex-column justify-content-center">
    <div class="row flex-md-row-reverse">
        <div class="col-md-4 my-2 my-md-0 d-none d-md-flex flex-column justify-content-center align-items-center">
            <span class="h4 text-danger"><i class="fas fa-exclamation-triangle fa-5x"></i></span>
        </div>
        <div class="col-md-8 my-2 my-md-0 d-flex flex-column justify-content-center">
            <div class="text-center text-md-left">
                <div class="my-3">
                    @if (!string.IsNullOrEmpty(Model.View.ErrorCode))
                    {
                        <span class="h4 text-danger">(@Model.View.ErrorCode)</span>
                    }
                    <span class="h4 text-dark">Something went wrong...</span>
                </div>
                <div class="my-3">
                    <span>An error occured while processing your request. You can simply return to the home page and try again, or, if you think that something went wrong when it shouldn't have, you can tell us about it.</span>
                </div>
                <div class="my-3">
                    <div class="row">
                        <div class="col-md-6 my-2 my-md-0">
                            <a asp-page="/Contact" class="btn btn-danger btn-block" title="Tell us">
                                <span>Tell us</span>
                            </a>
                        </div>
                        <div class="col-md-6 my-2 my-md-0">
                            <a asp-page="/Index" class="btn btn-outline-dark btn-block" title="Home">
                                <span>Home</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
