@page
@model DetailsModel
@{
    ViewData["Title"] = "Interaction data details";
}

<partial name="_NavigationTitleCardPartial" model="@Helpers.ViewModels.NavigationTitleCardViewModel.GetDatabaseInteractionFieldNavigationTitleCard(Model.View.DatabaseInteractionField)" />
@if (User.IsInRole("Administrator"))
{
    <a asp-page="/Administration/Databases/DatabaseInteractionFields/Details" asp-route-id="@Model.View.DatabaseInteractionField.Id" class="btn btn-info btn-block mb-3" title="Details">
        <span><i class="fas fa-info-circle"></i></span>
        <span>Details</span>
    </a>
}
@if (!string.IsNullOrEmpty(Model.View.DatabaseInteractionField.Description))
{
    <div class="card mb-3">
        <div class="card-body text-center small">
            <span title="Description">@Model.View.DatabaseInteractionField.Description</span>
        </div>
    </div>
}
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-database"></i></span>
            </div>
            <div>
                <span>Database</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered table-datatable" data-order="[[1]]">
            <thead class="thead-light">
                <tr>
                    <th class="text-center text-break text-nowrap" data-orderable="false" data-searchable="false" data-name="index">
                        <span>#</span>
                    </th>
                    <th class="text-left text-break">
                        <span>Database</span>
                    </th>
                    <th class="text-center text-break" data-orderable="false" data-searchable="false">
                        <span>Links</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-center text-break text-nowrap">
                        <span></span>
                    </td>
                    <td class="text-left text-break">
                        <a asp-page="/AvailableData/Databases/Databases/Details" asp-route-id="@Model.View.DatabaseInteractionField.Database.Id" title="@Model.View.DatabaseInteractionField.Database.Name">@Model.View.DatabaseInteractionField.Database.Name</a>
                    </td>
                    <td class="text-center text-break">
                        <a asp-page="/AvailableData/Databases/Databases/Details" asp-route-id="@Model.View.DatabaseInteractionField.Database.Id" title="Details">
                            <span>Details</span>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-arrow-right"></i></span>
            </div>
            <div>
                <span>Interactions</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="alert alert-info text-justify text-wrap mb-0">
            <span><i class="fas fa-info-circle"></i></span>
            <span>The data set currently contains @Model.View.InteractionCount interaction@(Model.View.InteractionCount != 1 ? "s" : string.Empty).</span>
        </div>
    </div>
</div>
