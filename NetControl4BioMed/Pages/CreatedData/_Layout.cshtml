@{
    Layout = "/Pages/_Layout.cshtml";
}

@section Banner {
    @RenderSection("Banner", required: false)
}

@section Breadcrumbs {
    <partial name="_NavigationBreadcrumbPartial" model="@Helpers.ViewModels.NavigationBreadcrumbViewModel.CreatedDataNavigationBreadcrumb" />
    @RenderSection("Breadcrumbs", required: false)
}

@section Navigation {
    @if (!User.Identity.IsAuthenticated)
    {
        <partial name="_NavigationAreaPartial" model="@Helpers.ViewModels.NavigationAreaViewModel.PublicDataNavigationArea" />
    }
    else
    {
        <partial name="_NavigationAreaPartial" model="@Helpers.ViewModels.NavigationAreaViewModel.PrivateDataNavigationArea" />
    }
    @RenderSection("Navigation", required: false)
}

@RenderBody()

@section Scripts {
    @RenderSection("Scripts", required: false)
}
