@page
@model IndexModel
@{
    ViewData["Title"] = "Overview";
    ViewData["ActivePage"] = "Index";
}

<div class="row">
    <div class="col-lg-6 d-flex flex-column mb-3">
        <div class="card flex-grow-1">
            <div class="card-body d-flex flex-column text-center">
                <div class="flex-grow-1 d-flex flex-column align-items-center justify-content-around">
                    <div class="my-1 my-lg-0">
                        <span><i class="fas fa-user fa-2x"></i></span>
                    </div>
                    <div class="d-flex flex-column align-items-center my-1 my-lg-0">
                        <div class="font-weight-bold">
                            <span title="@Model.View.User.Email">@Model.View.User.Email</span>
                        </div>
                        <div class="small">
                            @if (Model.View.User.EmailConfirmed)
                            {
                                <span class="text-success" title="E-mail confirmed"><i class="fas fa-check-circle"></i></span>
                            }
                            else
                            {
                                <span class="text-danger" title="E-mail not confirmed"><i class="fas fa-times-circle"></i></span>
                            }
                            <span title="@Model.View.User.DateTimeCreated.ToString()">Account created on @Model.View.User.DateTimeCreated.ToString()</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 d-flex flex-column mb-3">
        <div class="mb-1">
            <a asp-page="/Content/Networks/Index" class="btn btn-success btn-block text-white py-lg-3" title="Networks">
                <span class="d-flex flex-column flex-lg-row align-items-center justify-content-around">
                    <span class="my-1 my-lg-0"><i class="fas fa-share-alt fa-2x"></i></span>
                    <span class="d-flex flex-column align-items-center align-items-lg-start my-1 my-lg-0">
                        <span class="font-weight-bold">@Model.View.NetworkCount</span>
                        <span class="small">Network@(Model.View.NetworkCount != 1 ? "s" : string.Empty)</span>
                    </span>
                </span>
            </a>
        </div>
        <div class="mt-1">
            <a asp-page="/Content/Analyses/Index" class="btn btn-success btn-block text-white py-lg-3" title="Analyses">
                <span class="d-flex flex-column flex-lg-row align-items-center justify-content-around">
                    <span class="my-1 my-lg-0"><i class="fas fa-desktop fa-2x"></i></span>
                    <span class="d-flex flex-column align-items-center align-items-lg-start my-1 my-lg-0">
                        <span class="font-weight-bold">@Model.View.AnalysisCount</span>
                        <span class="small">Analys@(Model.View.AnalysisCount != 1 ? "e" : "i")s</span>
                    </span>
                </span>
            </a>
        </div>
    </div>
</div>
