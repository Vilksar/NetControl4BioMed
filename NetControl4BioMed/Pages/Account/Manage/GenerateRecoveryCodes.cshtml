@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Generate two-factor authentication recovery codes";
    ViewData["ActivePage"] = "TwoFactorAuthentication";
}

<div class="alert alert-info text-justify text-wrap">
    <span><i class="fas fa-info-circle"></i></span>
    <span>Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key used in an authenticator app you should <a asp-page="/Account/Manage/ResetAuthenticator" class="alert-link">reset your authenticator keys</a>.</span>
</div>
<div class="alert alert-danger text-justify text-wrap">
    <span><i class="fas fa-exclamation-circle"></i></span>
    <span><span class="font-weight-bold">Put these codes in a safe place.</span> If you lose your device and don't have the recovery codes you will lose access to your account.</span>
</div>
<form method="post" class="text-justify">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger text-justify text-wrap"></div>
    <button type="submit" title="Generate recovery codes" class="btn btn-block btn-success">
        <span>Generate recovery codes</span>
    </button>
</form>

@section Scripts {
    <partial name="_ScriptsValidationPartial" />
}
