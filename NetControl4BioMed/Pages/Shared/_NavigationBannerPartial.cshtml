@model NetControl4BioMed.Helpers.ViewModels.NavigationBannerViewModel
@{
    var subtitle = ViewData["Title"];
}

<div class="bg-@Model.Color text-white py-2">
    <div class="container">
        <div class="row align-items-center my-1">
            <div class="col-lg-1 d-flex flex-column justify-content-center align-items-center my-1 my-lg-0">
                <span><i class="fas @Model.Icon fa-3x"></i></span>
            </div>
            <div class="col-lg-11 d-flex flex-column justify-content-center align-items-center align-items-lg-start my-1 my-lg-0">
                <span class="h4 my-0">@Model.Title</span>
                <span>@subtitle</span>
            </div>
        </div>
    </div>
</div>
