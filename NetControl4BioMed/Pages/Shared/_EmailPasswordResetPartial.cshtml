@model NetControl4BioMed.Helpers.ViewModels.EmailPasswordResetViewModel

<div>
    <div>
        <span>Hello @Model.Email,</span>
    </div>
    <div>
        <span>You have requested a password reset for your <a href="@Model.ApplicationUrl">NetControl4BioMed</a> account. Please click <a href="@Model.Url">here</a> to reset your password, or paste the following line into a web browser.</span>
    </div>
    <div>
        <code>@Model.Url</code>
    </div>
    <div>
        <span>If it wasn't you who made this request, then this e-mail was likely sent by accident. No further action is needed on your part.</span>
    </div>
    <div>
        <span>Thank you for using our application!</span>
    </div>
    <div>
        <span>This message was sent automatically by the <a href="@Model.ApplicationUrl">NetControl4BioMed</a> application from an unmonitored address. Please do not reply to this e-mail.</span>
    </div>
</div>
