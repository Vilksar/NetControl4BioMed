@model NetworkStatus
@using NetControl4BioMed.Data.Enumerations
@using Helpers.Extensions

<div class="text-uppercase">
    @switch (Model)
    {
        case NetworkStatus.Error:
            <span class="text-danger"><i class="fas fa-times-circle"></i></span>
            break;
        case NetworkStatus.Defined:
            <span class="text-warning"><i class="fas fa-hashtag"></i></span>
            break;
        case NetworkStatus.Generating:
            <span class="text-warning"><i class="fas fa-spinner fa-spin"></i></span>
            break;
        case NetworkStatus.Completed:
            <span class="text-success"><i class="fas fa-check-circle"></i></span>
            break;
        default:
            break;
    }
    <span title="@Model.GetDisplayDescription()">@Model.GetDisplayName()</span>
</div>
