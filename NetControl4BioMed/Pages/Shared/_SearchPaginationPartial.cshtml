@model Helpers.ViewModels.SearchPaginationViewModel

<li class="list-group-item bg-light">
    <div class="row align-items-center">
        <div class="col-sm-6 text-center text-md-left">
            <span class="text-muted small">Showing items @Model.ItemsPerPageFirst to @Model.ItemsPerPageLast out of @Model.TotalItems.</span>
        </div>
        <div class="col-sm-6 text-center text-md-right">
            <div class="btn-group">
                <a href="@Model.PreviousPageLink" class="btn @(string.IsNullOrEmpty(Model.PreviousPageLink) ? "disabled" : string.Empty)" title="Previous page">
                    <span><i class="fas fa-angle-left"></i></span>
                </a>
                <button type="button" class="btn" title="Current page" disabled>
                    <span>@Model.CurrentPage / @Model.TotalPages</span>
                </button>
                <a href="@Model.NextPageLink" class="btn @(string.IsNullOrEmpty(Model.NextPageLink) ? "disabled" : string.Empty)" title="Next page">
                    <span><i class="fas fa-angle-right"></i></span>
                </a>
            </div>
        </div>
    </div>
</li>
