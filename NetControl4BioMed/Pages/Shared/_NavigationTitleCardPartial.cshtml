@model NetControl4BioMed.Helpers.ViewModels.NavigationTitleCardViewModel

<div class="card mb-3">
    <div class="card-body text-center">
        <div class="my-2">
            <span><i class="fas @Model.Icon fa-2x"></i></span>
        </div>
        <div class="">
            <span class="font-weight-bold" title="@Model.Title">@Model.Title</span>
        </div>
        @if (!string.IsNullOrEmpty(Model.Subtitle))
        {
            <div class="">
                <span class="small text-muted" title="@Model.Subtitle">@Model.Subtitle</span>
            </div>
        }
    </div>
</div>
