@model NetworkUserType
@using NetControl4BioMed.Data.Enumerations
@using NetControl4BioMed.Helpers.Extensions

<div class="text-uppercase">
    @switch (Model)
    {
        case NetworkUserType.None:
            <span style="color: lightgray;"><i class="fas fa-user"></i></span>
            break;
        case NetworkUserType.Owner:
            <span style="color: tomato;"><i class="fas fa-user"></i></span>
            break;
        default:
            break;
    }
    <span title="@Model.GetDisplayDescription()">@Model.GetDisplayName()</span>
</div>
