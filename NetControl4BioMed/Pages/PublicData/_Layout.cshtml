@{
    Layout = "/Pages/_Layout.cshtml";
}

@section Banner {
    <partial name="_NavigationBannerPartial" model="@Helpers.ViewModels.NavigationBannerViewModel.PublicDataNavigationBanner" />
    @RenderSection("Banner", required: false)
}

@section Breadcrumbs {
    <partial name="_NavigationBreadcrumbPartial" model="@Helpers.ViewModels.NavigationBreadcrumbViewModel.PublicDataNavigationBreadcrumb" />
    @RenderSection("Breadcrumbs", required: false)
}

@section Navigation {
    <partial name="_NavigationAreaPartial" model="@Helpers.ViewModels.NavigationAreaViewModel.PublicDataNavigationArea" />
    @RenderSection("Navigation", required: false)
}

@RenderBody()

@section Scripts {
    @RenderSection("Scripts", required: false)
}
