@page
@model ContactModel
@{
    ViewData["Title"] = "Contact";
}

@section Banner {
    <div class="bg-secondary text-white py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 my-2 my-md-0">
                    <div class="row align-items-center">
                        <div class="col-md-1 d-flex flex-column justify-content-center align-items-center">
                            <span class="h4 my-0"><i class="fas fa-envelope"></i></span>

                        </div>
                        <div class="col-md-11 d-flex flex-column justify-content-center align-items-center align-items-md-start">
                            <span class="h4 my-0">@ViewData["Title"]</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="flex-grow-1 d-flex flex-column justify-content-center">
    <div class="row">
        <div class="offset-md-2 col-md-8 offset-lg-3 col-lg-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Name" class="font-weight-bold">Name</label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-description-for="Input.Name" class="text-muted small">Your name.</span>
                    <span asp-validation-for="Input.Name" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="font-weight-bold">E-mail</label>
                    <input asp-for="Input.Email" class="form-control" type="email" />
                    <span asp-description-for="Input.Email" class="text-muted small">Your e-mail address.</span>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Message" class="font-weight-bold">Message</label>
                    <textarea asp-for="Input.Message" class="form-control"></textarea>
                    <span asp-description-for="Input.Message" class="text-muted small">The message to be sent.</span>
                    <span asp-validation-for="Input.Message" class="text-danger small"></span>
                </div>
                <button type="submit" title="Submit" class="btn btn-block btn-success">
                    <span>Submit</span>
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ScriptsValidationPartial" />
}
