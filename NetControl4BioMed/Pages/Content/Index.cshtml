@page
@model IndexModel
@{
    ViewData["Title"] = "Overview";
    ViewData["ActivePage"] = "Index";
}

<div class="row align-items-center">
    <div class="col-lg-6 mb-3">
        <a asp-page="/Content/Created/Networks/Index" class="btn btn-success btn-block text-white py-lg-3" title="Networks">
            <span class="d-flex flex-column flex-lg-row align-items-center justify-content-around">
                <span class="my-1 my-lg-0"><i class="fas fa-share-alt fa-2x"></i></span>
                <span class="d-flex flex-column align-items-center align-items-lg-start my-1 my-lg-0">
                    <span class="font-weight-bold">@Model.View.NetworkCount</span>
                    <span class="small">Network@(Model.View.NetworkCount != 1 ? "s" : string.Empty)</span>
                </span>
            </span>
        </a>
    </div>
    <div class="col-lg-6 mb-3">
        <a asp-page="/Content/Created/Analyses/Index" class="btn btn-success btn-block text-white py-lg-3" title="Analyses">
            <span class="d-flex flex-column flex-lg-row align-items-center justify-content-around">
                <span class="my-1 my-lg-0"><i class="fas fa-desktop fa-2x"></i></span>
                <span class="d-flex flex-column align-items-center align-items-lg-start my-1 my-lg-0">
                    <span class="font-weight-bold">@Model.View.AnalysisCount</span>
                    <span class="small">Analys@(Model.View.AnalysisCount != 1 ? "e" : "i")s</span>
                </span>
            </span>
        </a>
    </div>
</div>
@if (!Model.View.RecentNetworks.Any())
{
    <div class="card mb-3">
        <div class="card-header font-weight-bold">
            <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
                <div>
                    <span><i class="fas fa-share-alt"></i></span>
                </div>
                <div>
                    <span>Recent networks</span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-info text-justify text-wrap mb-0">
                <span><i class="fas fa-info-circle"></i></span>
                <span>There are no recent networks.</span>
            </div>
        </div>
    </div>
}
else
{
    <table class="table table-bordered mb-3">
        <thead class="thead-light">
            <tr>
                <th class="text-center text-break">
                    <span>#</span>
                </th>
                <th class="text-left text-break">
                    <span>Recent network</span>
                </th>
                <th class="text-center text-break">
                    <span>Date created</span>
                </th>
                <th class="text-center text-break" data-orderable="false" data-searchable="false">
                    <span>Links</span>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (network, index) in Model.View.RecentNetworks.Select((item, index) => (item, index + 1)))
            {
                <tr>
                    <td class="text-center text-break">
                        <span>@index</span>
                    </td>
                    <td class="text-left text-break">
                        <span title="@network.Name" class="font-weight-bold">@network.Name</span>
                    </td>
                    <td class="text-center text-break">
                        <span title="@network.DateTimeCreated.ToString()">@network.DateTimeCreated.ToString()</span>
                    </td>
                    <td class="text-center text-break">
                        <a asp-page="/Content/Created/Networks/Details" asp-route-id="@network.Id" title="Details">
                            <span>Details</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@if (!Model.View.RecentAnalyses.Any())
{
    <div class="card mb-3">
        <div class="card-header font-weight-bold">
            <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
                <div>
                    <span><i class="fas fa-desktop"></i></span>
                </div>
                <div>
                    <span>Recent analyses</span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-info text-justify text-wrap mb-0">
                <span><i class="fas fa-info-circle"></i></span>
                <span>There are no recent analyses.</span>
            </div>
        </div>
    </div>
}
else
{
    <table class="table table-bordered mb-3">
        <thead class="thead-light">
            <tr>
                <th class="text-center text-break">
                    <span>#</span>
                </th>
                <th class="text-left text-break">
                    <span>Recent analysis</span>
                </th>
                <th class="text-center text-break">
                    <span>Date started</span>
                </th>
                <th class="text-center text-break" data-orderable="false" data-searchable="false">
                    <span>Links</span>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (analysis, index) in Model.View.RecentAnalyses.Select((item, index) => (item, index + 1)))
            {
                <tr>
                    <td class="text-center text-break">
                        <span>@index</span>
                    </td>
                    <td class="text-left text-break">
                        <span title="@analysis.Name" class="font-weight-bold">@analysis.Name</span>
                    </td>
                    <td class="text-center text-break">
                        <span title="@analysis.DateTimeStarted.ToString()">@analysis.DateTimeStarted.ToString()</span>
                    </td>
                    <td class="text-center text-break">
                        <a asp-page="/Content/Created/Analyses/Details" asp-route-id="@analysis.Id" title="Details">
                            <span>Details</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
