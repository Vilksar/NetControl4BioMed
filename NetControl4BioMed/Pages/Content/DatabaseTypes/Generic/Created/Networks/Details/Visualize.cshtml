@page
@model VisualizeModel
@{
    ViewData["Title"] = "Visualize network";
}

<div class="cytoscape-area d-flex flex-column">
    <div class="cytoscape-configuration" hidden>
        <span>@Model.View.CytoscapeJson</span>
    </div>
    <div class="card mb-3">
        <div class="card-body cytoscape-legend">
            <div class="row align-items-center">
                <div class="col-lg-6 text-center">
                    <span style="color: lightgray"><i class="fas fa-circle"></i></span>
                    <span>None</span>
                </div>
                <div class="col-lg-6 text-center">
                    <span style="color: tomato"><i class="fas fa-circle"></i></span>
                    <span>Seed</span>
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-body cytoscape-container d-flex align-items-center justify-content-center">
            <div class="cytoscape-loading">
                <div class="text-center my-2">
                    <span><i class="fas fa-spinner fa-spin fa-2x"></i></span>
                </div>
                <div class="text-center my-2">
                    <span class="text-uppercase">Loading</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/cytoscape/cytoscape.min.js"></script>
}
