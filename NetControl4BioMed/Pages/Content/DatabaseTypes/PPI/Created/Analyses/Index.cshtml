@page
@model IndexModel
@using NetControl4BioMed.Data.Enumerations
@using Helpers.Extensions
@{
    ViewData["Title"] = "Analyses";
}

<partial name="_SearchInputPartial" model="Model.View.Search.Input" />
<partial name="_SearchFiltersPartial" model="Model.View.Search.Filters" />
<form method="get" class="text-justify">
    <div class="row align-items-center">
        <div class="col-lg-12 mb-3">
            <div class="input-group">
                <select name="databaseTypeId" class="custom-select">
                    @foreach (var item in Model.View.DatabaseTypes)
                    {
                        <option selected="@(item.Name == "PPI" ? "selected" : null)" value="@item.Id" title="@item.Description">@item.Name</option>
                    }
                </select>
                <select name="algorithm" class="custom-select">
                    @foreach (var item in Enum.GetValues(typeof(AnalysisAlgorithm)).Cast<AnalysisAlgorithm>().Where(item => item.ToString() != "Genetic"))
                    {
                        <option value="@item.ToString()" title="@item.GetDisplayDescription()">@item.GetDisplayName()</option>
                    }
                </select>
                <div class="input-group-append">
                    <button type="submit" asp-page="/Content/DatabaseTypes/PPI/Created/Analyses/Create" class="btn btn-success btn-block" title="Create">
                        <span><i class="fas fa-plus"></i></span>
                        <span>Create</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row align-items-center">
        <div class="col-lg-4 mb-3">
            <button type="submit" asp-page="/Content/DatabaseTypes/PPI/Created/Analyses/Download" class="btn btn-primary btn-block item-group-button" title="Download" disabled>
                <span><i class="fas fa-download"></i></span>
                <span>Download</span>
            </button>
        </div>
        <div class="col-lg-4 mb-3">
            <button type="submit" asp-page="/Content/DatabaseTypes/PPI/Created/Analyses/Stop" class="btn btn-secondary btn-block item-group-button" title="Stop" disabled>
                <span><i class="fas fa-stop"></i></span>
                <span>Stop</span>
            </button>
        </div>
        <div class="col-lg-4 mb-3">
            <button type="submit" asp-page="/Content/DatabaseTypes/PPI/Created/Analyses/Delete" class="btn btn-danger btn-block item-group-button" title="Delete" disabled>
                <span><i class="fas fa-trash"></i></span>
                <span>Delete</span>
            </button>
        </div>
    </div>
    @if (!Model.View.IsUserAuthenticated)
    {
        <div class="alert alert-info text-justify text-wrap">
            <span><i class="fas fa-info-circle"></i></span>
            <span>There are no analyses available, as you are not logged in.</span>
        </div>
    }
    else if (!Model.View.Search.Items.Any())
    {
        <div class="alert alert-info text-justify text-wrap">
            <span><i class="fas fa-info-circle"></i></span>
            <span>No analyses have been found@(Model.View.Search.Filters.Any() ? " matching the applied filters" : string.Empty).</span>
        </div>
    }
    else
    {
        <table class="table table-hover table-bordered item-group" data-paging="false" data-info="false" data-searching="false">
            <thead class="thead-light">
                <tr>
                    <th class="text-center text-break" data-orderable="false" data-searchable="false">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" id="select" class="custom-control-input item-group-select" title="Select" />
                            <label for="select" class="custom-control-label"></label>
                        </div>
                    </th>
                    <th class="text-left text-break">
                        <span>Name</span>
                    </th>
                    <th class="d-none d-lg-table-cell text-center text-break">
                        <span>Status</span>
                    </th>
                    <th class="d-none d-lg-table-cell text-center text-break">
                        <span>Progress</span>
                    </th>
                    <th class="text-center text-break" data-orderable="false" data-searchable="false">
                        <span>Links</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.View.Search.Items)
                {
                    <tr class="item-group-item item-refresh" data-id="@item.Id" data-status="@item.Status.ToString()" data-refresh="@(item.Status == AnalysisStatus.Defined || item.Status == AnalysisStatus.Generating || item.Status == AnalysisStatus.Scheduled || item.Status == AnalysisStatus.Initializing || item.Status == AnalysisStatus.Ongoing || item.Status == AnalysisStatus.Stopping)">
                        <td class="text-center text-break">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" id="checkbox-@item.Id" name="ids" value="@item.Id" class="custom-control-input item-group-item-checkbox" title="Select" />
                                <label for="checkbox-@item.Id" class="custom-control-label"></label>
                            </div>
                        </td>
                        <td class="text-left text-break">
                            <span title="@item.Name" class="font-weight-bold">@item.Name</span>
                            <br />
                            <span title="@item.Id" class="small text-muted">@item.Id</span>
                        </td>
                        <td class="d-none d-lg-table-cell text-center text-break">
                            <partial name="_AnalysisStatusPartial" model="@item.Status" />
                        </td>
                        <td class="d-none d-lg-table-cell text-center text-break">
                            <span><span class="item-refresh-item" data-type="progress"></span>%</span>
                            <br />
                            <span><span class="item-refresh-item" data-type="progressWithoutImprovement"></span>%</span>
                        </td>
                        <td class="text-center text-break">
                            <a asp-page="/Content/DatabaseTypes/PPI/Created/Analyses/Details/Index" asp-route-id="@item.Id" class="btn btn-info m-1" title="Details">
                                <span><i class="fas fa-info-circle"></i></span>
                            </a>
                            <a asp-page="/Content/DatabaseTypes/PPI/Created/Analyses/Download" asp-route-ids="@item.Id" class="btn btn-primary m-1" title="Download">
                                <span><i class="fas fa-download"></i></span>
                            </a>
                            @if (item.Status == AnalysisStatus.Ongoing)
                            {
                                <a asp-page="/Content/DatabaseTypes/PPI/Created/Analyses/Stop" asp-route-ids="@item.Id" class="btn btn-secondary m-1" title="Stop">
                                    <span><i class="fas fa-stop"></i></span>
                                </a>
                            }
                            <a asp-page="/Content/DatabaseTypes/PPI/Created/Analyses/Delete" asp-route-ids="@item.Id" class="btn btn-danger mx-1" title="Delete">
                                <span><i class="fas fa-trash"></i></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <partial name="_SearchPaginationPartial" model="Model.View.Search.Pagination" />
    }
</form>
