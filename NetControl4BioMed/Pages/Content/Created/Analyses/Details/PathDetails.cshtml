@page
@model PathDetailsModel
@{
    ViewData["Title"] = "Analysis path details";
    ViewData["ActiveGroup"] = "AnalysisCreated";
    ViewData["ActivePage"] = "AnalysisControlPaths";
}

<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-circle"></i></span>
            </div>
            <div>
                <span>Path nodes</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="alert alert-info text-justify text-wrap">
            <span><i class="fas fa-info-circle"></i></span>
            <span>This section contains the nodes in the path.</span>
        </div>
        <table class="table table-hover table-bordered table-datatable item-group" data-order="[[0]]">
            <thead class="thead-light">
                <tr>
                    <th class="text-center text-break" data-name="index">
                        <span>#</span>
                    </th>
                    <th class="text-left text-break">
                        <span>Node</span>
                    </th>
                    <th class="d-none d-lg-table-cell text-center text-break">
                        <span>Type</span>
                    </th>
                    <th class="text-center text-break" data-orderable="false" data-searchable="false">
                        <span>Links</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pathNode in Model.View.Path.PathNodes)
                {
                    <tr class="item-group-item">
                        <td class="text-center text-break">
                            <span></span>
                        </td>
                        <td class="text-left text-break">
                            <span title="@pathNode.Node.Name" class="font-weight-bold">@pathNode.Node.Name</span>
                        </td>
                        <td class="d-none d-lg-table-cell text-center text-break">
                            <span title="@pathNode.Type.ToString()">@pathNode.Type.ToString()</span>
                        </td>
                        <td class="text-center text-break">
                            <a asp-page="/Content/Data/Nodes/Details" asp-route-id="@pathNode.Node.Id" title="Details" target="_blank" rel="nofollow noopener noreferrer">
                                <span>Details</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-arrow-right"></i></span>
            </div>
            <div>
                <span>Path edges</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="alert alert-info text-justify text-wrap">
            <span><i class="fas fa-info-circle"></i></span>
            <span>This section contains the edges in the path.</span>
        </div>
        <table class="table table-hover table-bordered table-datatable item-group" data-order="[[0]]">
            <thead class="thead-light">
                <tr>
                    <th class="text-center text-break" data-name="index">
                        <span>#</span>
                    </th>
                    <th class="text-left text-break">
                        <span>Edge</span>
                    </th>
                    <th class="text-center text-break" data-orderable="false" data-searchable="false">
                        <span>Links</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pathEdge in Model.View.Path.PathEdges)
                {
                    <tr class="item-group-item">
                        <td class="text-center text-break">
                            <span></span>
                        </td>
                        <td class="text-left text-break">
                            <span title="@pathEdge.Edge.Name" class="font-weight-bold">@pathEdge.Edge.Name</span>
                        </td>
                        <td class="text-center text-break">
                            <a asp-page="/Content/Data/Edges/Details" asp-route-id="@pathEdge.Edge.Id" title="Details" target="_blank" rel="nofollow noopener noreferrer">
                                <span>Details</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
