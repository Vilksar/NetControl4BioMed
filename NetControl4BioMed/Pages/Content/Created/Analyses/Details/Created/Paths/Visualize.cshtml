@page
@model VisualizeModel
@{
    ViewData["Title"] = "Visualize path";
}

<div class="cytoscape-area d-flex flex-column">
    <div class="cytoscape-configuration" hidden>
        <span>@Model.View.CytoscapeJson</span>
    </div>
    <div class="card mb-3">
        <div class="card-body cytoscape-legend">
            <div class="row align-items-center">
                <div class="col-lg-3 text-center">
                    <span style="color: lightgray"><i class="fas fa-circle"></i></span>
                    <span>None</span>
                </div>
                <div class="col-lg-3 text-center">
                    <span style="color: lightpink"><i class="fas fa-circle"></i></span>
                    <span>Source</span>
                </div>
                <div class="col-lg-3 text-center">
                    <span style="color: cornflowerblue"><i class="fas fa-circle"></i></span>
                    <span>Target</span>
                </div>
                <div class="col-lg-3 text-center">
                    <span style="color: forestgreen"><i class="fas fa-circle"></i></span>
                    <span>Control</span>
                </div>
            </div>
            <div class="row align-items-center">
                <div class="col-lg-3 text-center">
                    <span style="color: mediumpurple"><i class="fas fa-circle"></i></span>
                    <span><i class="fas fa-equals"></i></span>
                    <span style="color: lightpink"><i class="fas fa-circle"></i></span>
                    <span><i class="fas fa-plus"></i></span>
                    <span style="color: cornflowerblue"><i class="fas fa-circle"></i></span>
                </div>
                <div class="col-lg-3 text-center">
                    <span style="color: deeppink"><i class="fas fa-circle"></i></span>
                    <span><i class="fas fa-equals"></i></span>
                    <span style="color: lightpink"><i class="fas fa-circle"></i></span>
                    <span><i class="fas fa-plus"></i></span>
                    <span style="color: forestgreen"><i class="fas fa-circle"></i></span>
                </div>
                <div class="col-lg-3 text-center">
                    <span style="color: aquamarine"><i class="fas fa-circle"></i></span>
                    <span><i class="fas fa-equals"></i></span>
                    <span style="color: cornflowerblue"><i class="fas fa-circle"></i></span>
                    <span><i class="fas fa-plus"></i></span>
                    <span style="color: forestgreen"><i class="fas fa-circle"></i></span>
                </div>
                <div class="col-lg-3 text-center">
                    <span style="color: darkgoldenrod"><i class="fas fa-circle"></i></span>
                    <span><i class="fas fa-equals"></i></span>
                    <span style="color: lightpink"><i class="fas fa-circle"></i></span>
                    <span><i class="fas fa-plus"></i></span>
                    <span style="color: cornflowerblue"><i class="fas fa-circle"></i></span>
                    <span><i class="fas fa-plus"></i></span>
                    <span style="color: forestgreen"><i class="fas fa-circle"></i></span>
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-body cytoscape-container d-flex align-items-center justify-content-center">
            <div class="cytoscape-loading">
                <div class="text-center my-2">
                    <span><i class="fas fa-spinner fa-spin fa-2x"></i></span>
                </div>
                <div class="text-center my-2">
                    <span class="text-uppercase">Loading</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/cytoscape/cytoscape.min.js"></script>
}
