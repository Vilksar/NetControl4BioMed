@page
@model DetailsModel
@{
    ViewData["Title"] = "Node field details";
}

@section Breadcrumbs {
    <a asp-page="/Content/Databases/DatabaseNodeFields/Details" class="breadcrumb-item"><span>Details</span></a>
}

<div class="card mb-3">
    <div class="card-body text-center">
        <div class="my-2">
            <span><i class="fas fa-table fa-2x"></i></span>
        </div>
        <div class="font-weight-bold">
            <span title="@Model.View.DatabaseNodeField.Name">@Model.View.DatabaseNodeField.Name</span>
        </div>
        <div class="small text-muted">
            <span title="@Model.View.DatabaseNodeField.Id">@Model.View.DatabaseNodeField.Id</span>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(Model.View.DatabaseNodeField.Description))
{
    <div class="card mb-3">
        <div class="card-body text-justify small">
            <span title="Description">@Model.View.DatabaseNodeField.Description</span>
        </div>
    </div>
}
@if (User.IsInRole("Administrator"))
{
    <a asp-page="/Administration/Databases/DatabaseNodeFields/Details" asp-route-id="@Model.View.DatabaseNodeField.Id" class="btn btn-primary btn-block mb-3" title="Details">
        <span><i class="fas fa-info-circle"></i></span>
        <span>Details</span>
    </a>
}
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-database"></i></span>
            </div>
            <div>
                <span>Database</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered table-datatable" data-order="[[1]]">
            <thead class="thead-light">
                <tr>
                    <th class="text-center text-break" data-orderable="false" data-searchable="false" data-name="index">
                        <span>#</span>
                    </th>
                    <th class="text-left text-break">
                        <span>Database</span>
                    </th>
                    <th class="text-center text-break" data-orderable="false" data-searchable="false">
                        <span>Links</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-center text-break">
                        <span></span>
                    </td>
                    <td class="text-left text-break">
                        <span title="@Model.View.DatabaseNodeField.Database.Name">@Model.View.DatabaseNodeField.Database.Name</span>
                    </td>
                    <td class="text-center text-break">
                        <a asp-page="/Content/Databases/Databases/Details" asp-route-id="@Model.View.DatabaseNodeField.Database.Id" title="Details">
                            <span>Details</span>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-circle"></i></span>
            </div>
            <div>
                <span>Nodes</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <a asp-page="/Content/Data/Nodes/Index" asp-route-searchString="@Model.View.DatabaseNodeField.Id" asp-route-searchIn="DatabaseNodeFieldId" class="btn btn-info btn-block mb-3">
            <span>View all</span>
        </a>
        <div class="alert alert-info text-justify text-wrap mb-0">
            <span><i class="fas fa-info-circle"></i></span>
            <span>The node field currently contains @Model.View.DatabaseNodeField.DatabaseNodeFieldNodes.Count() node@(Model.View.DatabaseNodeField.DatabaseNodeFieldNodes.Count() != 1 ? "s" : string.Empty).</span>
        </div>
    </div>
</div>
