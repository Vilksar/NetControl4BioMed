@page
@model CreateModel
@{
    ViewData["Title"] = "Create database user";
}

<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-plus"></i></span>
            </div>
            <div>
                <span>Create</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="alert alert-info text-justify text-wrap">
            <span><i class="fas fa-info-circle"></i></span>
            <span>This page allows giving a registered user access to a database. If the user you wish to add is not yet registered, please use <a asp-page="/Administration/Permissions/DatabaseUserInvitations/Create" asp-route-databaseId="@Model.Input.DatabaseId" class="alert-link">this link</a> instead.</span>
        </div>
        <form method="post" class="text-justify">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger text-wrap text-justify"></div>
            <div class="form-group">
                <label asp-for="Input.DatabaseId" class="font-weight-bold">Database ID</label>
                <input asp-for="Input.DatabaseId" class="form-control" />
                <span asp-description-for="Input.DatabaseId" class="text-muted small">The ID of the database.</span>
                <span asp-validation-for="Input.DatabaseId" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserId" class="font-weight-bold">User ID</label>
                <input asp-for="Input.UserId" class="form-control" />
                <span asp-description-for="Input.UserId" class="text-muted small">The ID of the user.</span>
                <span asp-validation-for="Input.UserId" class="text-danger small"></span>
            </div>
            <button type="submit" class="btn btn-block btn-success" title="Create">
                <span>Create</span>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ScriptsValidationPartial" />
}
