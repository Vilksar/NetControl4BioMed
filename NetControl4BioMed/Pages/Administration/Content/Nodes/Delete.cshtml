@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete nodes";
}

@section Breadcrumbs {
    <a asp-page="/Administration/Content/Nodes/Delete" class="breadcrumb-item"><span>Delete</span></a>
}

<div class="alert alert-danger text-justify text-wrap">
    <span><i class="fas fa-exclamation-circle"></i></span>
    <span>The following @Model.View.Items.Count() item@(Model.View.Items.Count() != 1 ? "s" : string.Empty) will be deleted, together with all of the associated data. <span class="font-weight-bold">This action can't be reversed!</span></span>
</div>
<form method="post" class="text-justify">
    <button type="submit" class="btn btn-danger btn-block item-group-button mb-3" title="Delete">
        <span><i class="fas fa-trash"></i></span>
        <span>Delete</span>
    </button>
    @if (!Model.View.Items.Any())
    {
        <div class="alert alert-info text-justify text-wrap mb-0">
            <span><i class="fas fa-info-circle"></i></span>
            <span>No items have been found with the provided IDs.</span>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header font-weight-bold">
                <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
                    <div>
                        <span><i class="fas fa-trash"></i></span>
                    </div>
                    <div>
                        <span>Delete</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered table-datatable" data-order="[[2]]">
                    <thead class="thead-light">
                        <tr>
                            <th class="text-center text-break" data-orderable="false" data-searchable="false" hidden>
                                <span></span>
                            </th>
                            <th class="text-center text-break" data-orderable="false" data-searchable="false" data-name="index">
                                <span>#</span>
                            </th>
                            <th class="text-left text-break">
                                <span>Node</span>
                            </th>
                            <th class="text-center text-break" data-orderable="false" data-searchable="false">
                                <span>Links</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.View.Items)
                        {
                            <tr>
                                <td class="text-center text-break" hidden>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" id="@item.Id-checkbox" name="Input.Ids" value="@item.Id" class="custom-control-input" title="Select" checked="checked" />
                                        <label for="@item.Id-checkbox" class="custom-control-label"></label>
                                    </div>
                                </td>
                                <td class="text-center text-break">
                                    <span></span>
                                </td>
                                <td class="text-left text-break">
                                    <div>
                                        <span title="@item.Name" class="font-weight-bold">@item.Name</span>
                                    </div>
                                    <div>
                                        <span title="@item.Id" class="small">@item.Id</span>
                                    </div>
                                </td>
                                <td class="text-center text-break">
                                    <a asp-page="/Administration/Content/Nodes/Details" asp-route-id="@item.Id" title="Details">
                                        <span>Details</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</form>
