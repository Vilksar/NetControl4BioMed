@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete users";
}

@section Breadcrumbs {
    <a asp-page="/Administration/Accounts/Users/Delete" class="breadcrumb-item"><span>Delete</span></a>
}

<div class="alert alert-danger text-justify text-wrap">
    <span><i class="fas fa-exclamation-circle"></i></span>
    <span>The following @Model.View.Items.Count() item@(Model.View.Items.Count() != 1 ? "s" : string.Empty) will be deleted, together with all of the associated data. <span class="font-weight-bold">This action can't be reversed!</span></span>
</div>
<form method="post" class="text-justify">
    <button type="submit" class="btn btn-danger btn-block item-group-button mb-3" title="Delete">
        <span><i class="fas fa-trash"></i></span>
        <span>Delete</span>
    </button>
    @if (!Model.View.Items.Any())
    {
        <div class="alert alert-info text-justify text-wrap">
            <span><i class="fas fa-info-circle"></i></span>
            <span>No items have been found with the provided IDs.</span>
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered" data-paging="false" data-info="false" data-searching="false">
            <thead class="thead-light">
                <tr>
                    <th class="text-center text-break" data-orderable="false" data-searchable="false" hidden>
                        <span></span>
                    </th>
                    <th class="text-center text-break">
                        <span>#</span>
                    </th>
                    <th class="text-left text-break">
                        <span>Name</span>
                    </th>
                    <th class="text-left text-break">
                        <span>ID</span>
                    </th>
                    <th class="text-center text-break" data-orderable="false" data-searchable="false">
                        <span>Links</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (item, index) in Model.View.Items.Select((item, index) => (item, index + 1)))
                {
                    <tr>
                        <td class="text-center text-break" hidden>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" id="@item.Id" name="Input.Ids" value="@item.Id" class="custom-control-input" title="Select" checked="checked" />
                                <label for="@item.Id" class="custom-control-label"></label>
                            </div>
                        </td>
                        <td class="text-center text-break">
                            <span>@index</span>
                        </td>
                        <td class="text-left text-break">
                            <span title="@item.Email" class="font-weight-bold">@item.Email</span>
                        </td>
                        <td class="text-left text-break">
                            <span title="@item.Id">@item.Id</span>
                        </td>
                        <td class="text-center text-break">
                            <a asp-page="/Administration/Accounts/Users/Details" asp-route-id="@item.Id" title="Details">
                                <span>Details</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</form>
