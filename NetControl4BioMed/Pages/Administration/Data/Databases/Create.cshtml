@page
@model CreateModel
@{
    ViewData["Title"] = "Create database";
}

@section Breadcrumbs {
    <a asp-page="/Administration/Data/Databases/Create" class="breadcrumb-item"><span>Create</span></a>
}

<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-plus"></i></span>
            </div>
            <div>
                <span>Create</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="post" class="text-justify">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger text-wrap text-justify"></div>
            <div class="form-group">
                <label asp-for="Input.Name" class="font-weight-bold">Name</label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-description-for="Input.Name" class="text-muted small">The name of the new database.</span>
                <span asp-validation-for="Input.Name" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Description" class="font-weight-bold">Description</label>
                <textarea asp-for="Input.Description" class="form-control"></textarea>
                <span asp-description-for="Input.Description" class="text-muted small">The description of the new database.</span>
                <span asp-validation-for="Input.Description" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Url" class="font-weight-bold">URL</label>
                <input asp-for="Input.Url" class="form-control" />
                <span asp-description-for="Input.Url" class="text-muted small">The URL of the new database.</span>
                <span asp-validation-for="Input.Url" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.IsPublic" class="font-weight-bold">Set the database as public?</label>
                <select asp-for="Input.IsPublic" class="custom-select form-control">
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
                <span asp-description-for="Input.IsPublic" class="text-muted small">The public availability of the new database.</span>
                <span asp-validation-for="Input.IsPublic" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DatabaseTypeId" class="font-weight-bold">Type</label>
                <select asp-for="Input.DatabaseTypeId" class="custom-select form-control">
                    @foreach (var databaseType in Model.View.DatabaseTypes)
                    {
                        <option value="@databaseType.Id">@databaseType.Name</option>
                    }
                </select>
                <span asp-description-for="Input.DatabaseTypeId" class="text-muted small">The type of the new database.</span>
                <span asp-validation-for="Input.DatabaseTypeId" class="text-danger small"></span>
            </div>
            <button type="submit" class="btn btn-block btn-success" title="Create">
                <span>Create</span>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ScriptsValidationPartial" />
}
