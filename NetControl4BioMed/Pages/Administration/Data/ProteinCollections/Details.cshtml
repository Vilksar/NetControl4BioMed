@page
@model DetailsModel
@{
    ViewData["Title"] = "Protein collection details";
}

<div class="row align-items-center">
    <div class="col-lg-6 mb-3">
        <a asp-page="/Administration/Data/ProteinCollections/Update" asp-route-type="Edit" asp-route-ids="@Model.View.ProteinCollection.Id" class="btn btn-warning btn-block" title="Edit">
            <span><i class="fas fa-pencil-alt"></i></span>
            <span>Update</span>
        </a>
    </div>
    <div class="col-lg-6 mb-3">
        <a asp-page="/Administration/Data/ProteinCollections/Delete" asp-route-ids="@Model.View.ProteinCollection.Id" class="btn btn-danger btn-block" title="Delete">
            <span><i class="fas fa-trash"></i></span>
            <span>Delete</span>
        </a>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-info-circle"></i></span>
            </div>
            <div>
                <span>Details</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="get" class="text-justify">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger text-justify text-wrap"></div>
            <div class="form-group">
                <label asp-for="View.ProteinCollection.Id" class="font-weight-bold">ID</label>
                <input asp-for="View.ProteinCollection.Id" class="form-control" readonly />
                <span asp-description-for="View.ProteinCollection.Id" class="text-muted small">The ID of the protein collection.</span>
                <span asp-validation-for="View.ProteinCollection.Id" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="View.ProteinCollection.DateTimeCreated" class="font-weight-bold">Date</label>
                <input asp-for="View.ProteinCollection.DateTimeCreated" class="form-control" readonly />
                <span asp-description-for="View.ProteinCollection.DateTimeCreated" class="text-muted small">The date and time when the protein collection was created.</span>
                <span asp-validation-for="View.ProteinCollection.DateTimeCreated" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="View.ProteinCollection.Name" class="font-weight-bold">Name</label>
                <input asp-for="View.ProteinCollection.Name" class="form-control" readonly />
                <span asp-description-for="View.ProteinCollection.Name" class="text-muted small">The name of the protein collection.</span>
                <span asp-validation-for="View.ProteinCollection.Name" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="View.ProteinCollection.Description" class="font-weight-bold">Description</label>
                <textarea asp-for="View.ProteinCollection.Description" class="form-control" readonly></textarea>
                <span asp-description-for="View.ProteinCollection.Description" class="text-muted small">The description of the protein collection.</span>
                <span asp-validation-for="View.ProteinCollection.Description" class="text-danger small"></span>
            </div>
        </form>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-font"></i></span>
            </div>
            <div>
                <span>Types</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="alert alert-info text-justify text-wrap mb-0">
            <span><i class="fas fa-info-circle"></i></span>
            <span>The protein collection is currently assigned to @Model.View.TypeCount type@(Model.View.TypeCount != 1 ? "s" : string.Empty). You can <a asp-page="/Administration/Relationships/ProteinCollectionTypes/Index" asp-route-searchString="@Model.View.ProteinCollection.Id" asp-route-searchIn="ProteinCollectionId" class="alert-link">view the types</a>.</span>
        </div>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-circle"></i></span>
            </div>
            <div>
                <span>Proteins</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="alert alert-info text-justify text-wrap mb-0">
            <span><i class="fas fa-info-circle"></i></span>
            <span>The protein collection currently contains @Model.View.ProteinCount protein@(Model.View.ProteinCount != 1 ? "s" : string.Empty). You can <a asp-page="/Administration/Relationships/ProteinCollectionProteins/Index" asp-route-searchString="@Model.View.ProteinCollection.Id" asp-route-searchIn="ProteinCollectionId" class="alert-link">view the proteins</a>.</span>
        </div>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-share-alt"></i></span>
            </div>
            <div>
                <span>Networks</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="alert alert-info text-justify text-wrap mb-0">
            <span><i class="fas fa-info-circle"></i></span>
            <span>The protein collection is currently assigned to @Model.View.NetworkCount network@(Model.View.NetworkCount != 1 ? "s" : string.Empty). You can <a asp-page="/Administration/Created/Networks/Index" asp-route-searchString="@Model.View.ProteinCollection.Id" asp-route-searchIn="ProteinCollectionId" class="alert-link">view the networks</a>.</span>
        </div>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-desktop"></i></span>
            </div>
            <div>
                <span>Analyses</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="alert alert-info text-justify text-wrap mb-0">
            <span><i class="fas fa-info-circle"></i></span>
            <span>The protein collection is currently assigned to @Model.View.AnalysisCount analys@(Model.View.AnalysisCount != 1 ? "e" : "i")s. You can <a asp-page="/Administration/Created/Analyses/Index" asp-route-searchString="@Model.View.ProteinCollection.Id" asp-route-searchIn="ProteinCollectionId" class="alert-link">view the analyses</a>.</span>
        </div>
    </div>
</div>
