@page
@model EditModel
@{
    ViewData["Title"] = "Edit database node field";
}

@section Breadcrumbs {
    <a asp-page="/Administration/Data/DatabaseNodeFields/Edit" class="breadcrumb-item"><span>Edit</span></a>
}

<div class="row align-items-center">
    <div class="col-lg-6 mb-3">
        <a asp-page="/Administration/Data/DatabaseNodeFields/Details" asp-route-id="@Model.View.DatabaseNodeField.Id" class="btn btn-info btn-block" title="Details">
            <span><i class="fas fa-info-circle"></i></span>
            <span>Details</span>
        </a>
    </div>
    <div class="col-lg-6 mb-3">
        <a asp-page="/Administration/Data/DatabaseNodeFields/Delete" asp-route-ids="@Model.View.DatabaseNodeField.Id" class="btn btn-danger btn-block" title="Delete">
            <span><i class="fas fa-trash"></i></span>
            <span>Delete</span>
        </a>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-pencil-alt"></i></span>
            </div>
            <div>
                <span>Edit</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="post" class="text-justify">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger text-wrap text-justify"></div>
            <div class="form-group">
                <label asp-for="Input.Id" class="font-weight-bold">ID</label>
                <input asp-for="Input.Id" class="form-control" readonly />
                <span asp-description-for="Input.Id" class="text-muted small">The ID of the database node field.</span>
                <span asp-validation-for="Input.Id" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Name" class="font-weight-bold">Name</label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-description-for="Input.Name" class="text-muted small">The name of the database node field.</span>
                <span asp-validation-for="Input.Name" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Description" class="font-weight-bold">Description</label>
                <textarea asp-for="Input.Description" class="form-control"></textarea>
                <span asp-description-for="Input.Description" class="text-muted small">The description of the database node field.</span>
                <span asp-validation-for="Input.Description" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Url" class="font-weight-bold">URL</label>
                <input asp-for="Input.Url" class="form-control" />
                <span asp-description-for="Input.Url" class="text-muted small">The URL of the database node field.</span>
                <span asp-validation-for="Input.Url" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Type" class="font-weight-bold">Type</label>
                <select asp-for="Input.Type" class="custom-select form-control" asp-items="Html.GetEnumSelectList<DatabaseNodeFieldType>()"></select>
                <span asp-description-for="Input.Type" class="text-muted small">The type of the database node field.</span>
                <span asp-validation-for="Input.Type" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.IsSearchable" class="font-weight-bold">Set the database node field as searchable?</label>
                <select asp-for="Input.IsSearchable" class="custom-select form-control">
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
                <span asp-description-for="Input.IsSearchable" class="text-muted small">The possibility to identify nodes based on the database node field.</span>
                <span asp-validation-for="Input.IsSearchable" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DatabaseString" class="font-weight-bold">Database ID / name</label>
                <input asp-for="Input.DatabaseString" class="form-control" />
                <span asp-description-for="Input.DatabaseString" class="text-muted small">The ID or the name of the database (case-sensitive).</span>
                <span asp-validation-for="Input.DatabaseString" class="text-danger small"></span>
            </div>
            <button type="submit" class="btn btn-block btn-success" title="Update">
                <span>Update</span>
            </button>
        </form>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header font-weight-bold">
        <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
            <div>
                <span><i class="fas fa-circle"></i></span>
            </div>
            <div>
                <span>Nodes</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <a asp-page="/Administration/Relationships/DatabaseNodeFieldNodes/Index" asp-route-searchString="@Model.View.DatabaseNodeField.Id" asp-route-searchIn="DatabaseNodeFieldId" class="btn btn-info btn-block">
                <span>View all</span>
            </a>
        </div>
        <div class="alert alert-info text-justify text-wrap mb-0">
            <span><i class="fas fa-info-circle"></i></span>
            <span>The database node field currently contains @Model.View.DatabaseNodeField.DatabaseNodeFieldNodes.Select(item => item.Node).Distinct().Count() distinct node@(Model.View.DatabaseNodeField.DatabaseNodeFieldNodes.Select(item => item.Node).Distinct().Count() != 1 ? "s" : string.Empty) with @Model.View.DatabaseNodeField.DatabaseNodeFieldNodes.Count() value@(Model.View.DatabaseNodeField.DatabaseNodeFieldNodes.Count() != 1 ? "s" : string.Empty). You can <a asp-page="/Administration/Relationships/DatabaseNodeFieldNodes/Index" asp-route-searchString="@Model.View.DatabaseNodeField.Id" asp-route-searchIn="DatabaseNodeFieldId" class="alert-link">view the current node values</a>.</span>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ScriptsValidationPartial" />
}
