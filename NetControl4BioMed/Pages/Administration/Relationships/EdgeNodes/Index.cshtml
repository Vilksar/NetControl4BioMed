@page
@model IndexModel
@{
    ViewData["Title"] = "Edge nodes";
}

<partial name="_SearchInputPartial" model="Model.View.Search.Input" />
<partial name="_SearchFiltersPartial" model="Model.View.Search.Filters" />
<form method="get" class="text-justify">
    <div class="row align-items-center">
        <div class="col-lg-12 mb-3">
            <button type="submit" asp-page="/Administration/Content/Edges/Update" class="btn btn-primary btn-block item-group-button" title="Update" disabled>
                <span><i class="fas fa-code"></i></span>
                <span>Edit or delete selected items</span>
            </button>
        </div>
    </div>
    @if (!Model.View.Search.Items.Any())
    {
        <div class="alert alert-info text-justify text-wrap">
            <span><i class="fas fa-info-circle"></i></span>
            <span>No items have been found@(Model.View.Search.Filters.Any() ? " matching the applied filters" : string.Empty). <a asp-page="/Administration/Content/Edges/Update" asp-route-type="Create" title="Create" class="alert-link">Create a new one?</a></span>
        </div>
    }
    else
    {
        <table class="table table-hover table-bordered item-group" data-paging="false" data-info="false" data-searching="false">
            <thead class="thead-light">
                <tr>
                    <th class="text-center text-break" data-orderable="false" data-searchable="false">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" id="select" class="custom-control-input item-group-select" title="Select" />
                            <label for="select" class="custom-control-label"></label>
                        </div>
                    </th>
                    <th class="text-left text-break">
                        <span>Edge</span>
                    </th>
                    <th class="text-left text-break">
                        <span>Node</span>
                    </th>
                    <th class="text-center text-break">
                        <span>Type</span>
                    </th>
                    <th class="text-center text-break" data-orderable="false" data-searchable="false">
                        <span>Actions</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.View.Search.Items)
                {
                    <tr class="item-group-item">
                        <td class="text-center text-break">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" id="checkbox-@item.Edge.Id-@item.Node.Id" name="ids" value="@item.Edge.Id" class="custom-control-input item-group-item-checkbox" title="Select" />
                                <label for="checkbox-@item.Edge.Id-@item.Node.Id" class="custom-control-label"></label>
                            </div>
                        </td>
                        <td class="text-left text-break">
                            <div>
                                <span title="@item.Edge.Name" class="font-weight-bold">@item.Edge.Name</span>
                            </div>
                            <div>
                                <span title="@item.Edge.Id" class="small">@item.Edge.Id</span>
                            </div>
                        </td>
                        <td class="text-left text-break">
                            <div>
                                <span title="@item.Node.Name" class="font-weight-bold">@item.Node.Name</span>
                            </div>
                            <div>
                                <span title="@item.Node.Id" class="small">@item.Node.Id</span>
                            </div>
                        </td>
                        <th class="text-center text-break">
                            <span title="@item.Type.ToString()">@item.Type.ToString()</span>
                        </th>
                        <td class="text-center text-break">
                            <a asp-page="/Administration/Content/Edges/Update" asp-route-type="Edit" asp-route-ids="@item.Edge.Id" class="btn btn-warning m-1" title="Edit">
                                <span><i class="fas fa-pencil-alt"></i></span>
                            </a>
                            <a asp-page="/Administration/Content/Edges/Update" asp-route-type="Delete" asp-route-ids="@item.Edge.Id" class="btn btn-danger m-1" title="Delete">
                                <span><i class="fas fa-trash"></i></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <partial name="_SearchPaginationPartial" model="Model.View.Search.Pagination" />
    }
</form>
