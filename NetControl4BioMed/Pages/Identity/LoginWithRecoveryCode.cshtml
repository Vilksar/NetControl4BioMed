@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Log in with recovery code";
}

<div class="flex-grow-1 d-flex flex-column justify-content-center">
    <div class="row">
        <div class="offset-lg-3 col-lg-6">
            <div class="card mb-3">
                <div class="card-header font-weight-bold">
                    <div class="d-flex flex-column flex-lg-row-reverse justify-content-center align-items-center justify-content-lg-between">
                        <div>
                            <span><i class="fas fa-code"></i></span>
                        </div>
                        <div>
                            <span>Log in with recovery code</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-info text-justify text-wrap">
                        <span><i class="fas fa-info-circle"></i></span>
                        <span>You have requested to log in with a recovery code. This login will not be remembered until you provide an authenticator app code at log in or disable two-factor authentication and log in again.</span>
                    </div>
                    <form method="post" asp-route-returnUrl="@Model.View.ReturnUrl" class="text-justify">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-justify text-wrap"></div>
                        <div class="form-group">
                            <label asp-for="Input.RecoveryCode" class="font-weight-bold">Recovery code</label>
                            <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                            <span asp-description-for="Input.RecoveryCode" class="text-muted small">The recovery code associated with your account.</span>
                            <span asp-validation-for="Input.RecoveryCode" class="text-danger small"></span>
                        </div>
                        <button type="submit" title="Log in" class="btn btn-block btn-success">
                            <span><i class="fas fa-code"></i></span>
                            <span>Log in</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ScriptsValidationPartial" />
}
