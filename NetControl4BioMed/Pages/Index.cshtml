@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="flex-grow-1 d-flex flex-column justify-content-center">
    <div class="row flex-lg-row-reverse">
        <div class="col-lg-6 my-2 my-lg-0 d-none d-lg-flex flex-column justify-content-center align-items-center">
            <div class="border rounded-circle d-flex flex-column justify-content-center align-items-center" style="width: 300px; height: 300px;">
                <img src="~/img/netcontrol4biomed-icon.png" class="border-0 img-thumbnail" width="200" height="200" />
            </div>
        </div>
        <div class="col-lg-6 my-2 my-lg-0 d-flex flex-column justify-content-center">
            <div class="text-center text-lg-left">
                <div class="my-3">
                    <span class="h2">NetControl4BioMed</span>
                </div>
                <div class="my-3">
                    <span class="h4">A web-based platform for controllability analysis of protein-protein interaction networks</span>
                </div>
                <div class="my-3">
                    <span>An account is not required to use the application.</span>
                </div>
                @if (!Model.View.IsUserAuthenticated)
                {
                    <div class="my-3">
                        <div class="row">
                            <div class="col-md-6 my-2">
                                <a asp-page="/Content/Index" class="btn btn-success btn-block">
                                    <span><i class="fas fa-play"></i></span>
                                    <span>Use as guest</span>
                                </a>
                            </div>
                            <div class="col-md-6 my-2">
                                <a asp-page="/About" class="btn btn-outline-dark btn-block">
                                    <span><i class="fas fa-book"></i></span>
                                    <span>Tutorial</span>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-md-3 col-md-6 my-2">
                                <a asp-page="/Identity/Login" class="btn btn-dark btn-block">
                                    <span><i class="fas fa-sign-in-alt"></i></span>
                                    <span>Log in</span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="my-3">
                        <div class="row">
                            <div class="col-md-6 my-2">
                                <a asp-page="/Content/Index" class="btn btn-success btn-block">
                                    <span><i class="fas fa-play"></i></span>
                                    <span>Get started</span>
                                </a>
                            </div>
                            <div class="col-md-6 my-2">
                                <a asp-page="/About" class="btn btn-outline-dark btn-block">
                                    <span><i class="fas fa-book"></i></span>
                                    <span>Tutorial</span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
