@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="flex-grow-1 d-flex flex-column justify-content-center">
    <div class="row flex-lg-row-reverse">
        <div class="col-lg-6 my-2 my-lg-0 d-none d-lg-flex flex-column justify-content-center">
            <div class="border rounded d-flex align-items-center justify-content-center" style="min-height: 400px;">
                <span class="font-italic">A Cytoscape example network will come here.</span>
            </div>
        </div>
        <div class="col-lg-6 my-2 my-lg-0 d-flex flex-column justify-content-center">
            <div class="text-center text-lg-left">
                <div class="my-3">
                    <span class="h2">NetControl4BioMed</span>
                </div>
                <div class="my-3">
                    <span class="h4">A network controllability application.</span>
                </div>
                <div class="my-3">
                    <span>NetControl4BioMed is a web application developed for solving the network controllability problem.</span>
                </div>
                <div class="my-3">
                    <div class="row">
                        <div class="col-md-6 my-2 my-md-0">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-page="/Identity/Login" class="btn btn-success btn-block">
                                    <span>Get started</span>
                                </a>
                            }
                            else
                            {
                                <a asp-page="/Content/Dashboard" class="btn btn-primary btn-block">
                                    <span>Get started</span>
                                </a>
                            }
                        </div>
                        <div class="col-md-6 my-2 my-md-0">
                            <a asp-page="/About" class="btn btn-outline-dark btn-block">
                                <span>Find out more</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
