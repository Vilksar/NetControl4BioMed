@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="flex-grow-1 d-flex flex-column justify-content-center">
    <div class="row flex-lg-row-reverse">
        <div class="col-lg-6 my-2 my-lg-0 d-none d-lg-flex flex-column justify-content-center align-items-center">
            <div class="d-flex flex-column justify-content-center align-items-center" style="width: 450px; height: 450px;">
                <partial name="_DemonstrationDiagramPartial" />
            </div>
        </div>
        <div class="col-lg-6 my-2 my-lg-0 d-flex flex-column justify-content-center">
            <div class="text-center text-lg-left">
                <div class="my-3">
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                        <img src="~/img/netcontrol4biomed-icon.png" width="40" height="40" class="" />
                        <span class="h2 ml-2 mb-0">NetControl4BioMed</span>
                    </div>
                </div>
                <div class="my-3">
                    <span class="h5">A web-based platform for controllability analysis of protein-protein interaction networks</span>
                </div>
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="my-3">
                        <span>An account is not required to use the application.</span>
                    </div>
                    <div class="my-3">
                        <div class="row">
                            <div class="col-md-6 my-2">
                                <a asp-page="/PublicData/Index" class="btn btn-success btn-block">
                                    <span><i class="fas fa-user-friends"></i></span>
                                    <span>Public networks</span>
                                </a>
                            </div>
                            <div class="col-md-6 my-2">
                                <a asp-page="/Tutorial" class="btn btn-outline-dark btn-block">
                                    <span><i class="fas fa-book"></i></span>
                                    <span>Tutorial</span>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-md-3 col-md-6 my-2">
                                <a asp-page="/Identity/Login" class="btn btn-dark btn-block">
                                    <span><i class="fas fa-sign-in-alt"></i></span>
                                    <span>Log in</span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="my-3">
                        <div class="row">
                            <div class="col-md-6 my-2">
                                <a asp-page="/PrivateData/Index" class="btn btn-success btn-block">
                                    <span><i class="fas fa-user"></i></span>
                                    <span>My networks</span>
                                </a>
                            </div>
                            <div class="col-md-6 my-2">
                                <a asp-page="/About" class="btn btn-outline-dark btn-block">
                                    <span><i class="fas fa-book"></i></span>
                                    <span>Tutorial</span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
